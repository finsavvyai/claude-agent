{
  "name": "@claude-agent/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for the Claude Agent Platform",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./database": "./src/database/index.ts",
    "./auth": "./src/auth/index.ts",
    "./agents": "./src/agents/index.ts",
    "./api": "./src/api/index.ts",
    "./monitoring": "./src/monitoring/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "typescript",
    "types",
    "claude-agent",
    "shared"
  ],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0"
  },
  "dependencies": {
    "zod": "^4.3.6"
  }
}
