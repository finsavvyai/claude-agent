{
  "name": "@claude-agent/users",
  "version": "1.0.0",
  "description": "User management service for Claude Agent Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": ["users", "profile", "management", "claude-agent"],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "dependencies": {
    "@claude-agent/database": "workspace:*",
    "@claude-agent/shared": "workspace:*",
    "@nestjs/common": "^10.3.7",
    "@nestjs/core": "^10.3.7",
    "@nestjs/platform-express": "^10.3.7",
    "@nestjs/config": "^3.2.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/throttler": "^5.1.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.3.7",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^6.12.0",
    "prisma": "^5.9.1",
    "@prisma/client": "^7.3.0",
    "redis": "^4.6.13",
    "class-validator": "^0.14.1",
    "class-transformer": "^0.5.1",
    "bcrypt": "^5.1.1",
    "uuid": "^9.0.1",
    "sharp": "^0.33.2",
    "jimp": "^0.22.10",
    "mime-types": "^2.1.35",
    "winston": "^3.12.0",
    "lodash": "^4.17.21",
    "axios": "^1.6.5",
    "csv-writer": "^1.6.0",
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/bcrypt": "^5.0.2",
    "@types/uuid": "^9.0.8",
    "@types/lodash": "^4.14.202",
    "@types/mime-types": "^2.1.4",
    "@types/jest": "^29.5.12",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1",
    "tsc-alias": "^1.8.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "supertest": "^6.3.4",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
