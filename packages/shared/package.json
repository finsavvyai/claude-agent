{
  "name": "@claude-agent/shared",
  "version": "1.0.0",
  "description": "Shared utilities and constants for the Claude Agent Platform",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./utils": "./src/utils/index.ts",
    "./constants": "./src/constants/index.ts",
    "./config": "./src/config/index.ts",
    "./validation": "./src/validation/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
