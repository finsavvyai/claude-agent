    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "shared",
    "utilities",
    "claude-agent",
    "constants"
  ],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "@claude-agent/types": "workspace:*",
    "zod": "^3.22.4",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0"
