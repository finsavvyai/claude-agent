{
  "name": "@claude-agent/agents",
  "version": "1.0.0",
  "description": "Agent Management Service for Claude Agent Platform",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./service": "./src/agent-service.ts",
    "./registry": "./src/agent-registry.ts",
    "./health": "./src/health-monitor.ts",
    "./lifecycle": "./src/agent-lifecycle.ts",
    "./interfaces": "./src/interfaces.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
