  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "tsx": "^4.7.1",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "@claude-agent/types": "workspace:*",
    "@claude-agent/shared": "workspace:*",
    "@claude-agent/database": "workspace:*",
    "@claude-agent/cache": "workspace:*",
    "@claude-agent/messaging": "workspace:*",
    "@prisma/client": "^7.3.0",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "winston": "^3.12.0",
    "node-cron": "^3.0.3",
    "semver": "^7.5.4",
    "dotenv": "^16.3.1"
  }
