{
  "name": "@claude-agent/testing",
  "version": "1.0.0",
  "description": "Testing utilities and helpers for the Claude Agent Platform",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./fixtures": "./src/fixtures/index.ts",
    "./mocks": "./src/mocks/index.ts",
    "./helpers": "./src/helpers/index.ts",
    "./setup": "./src/setup/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "testing",
    "utilities",
    "helpers",
    "fixtures",
    "mocks",
    "claude-agent"
  ],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "@claude-agent/types": "workspace:*",
    "@claude-agent/shared": "workspace:*",
    "faker": "^6.6.6",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.16"
  }
}
