  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2"
  },
  "prisma": {
    "seed": "tsx src/seed.ts"
