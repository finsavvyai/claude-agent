{
  "name": "@claude-agent/tools-cli",
  "version": "1.0.0",
  "description": "Development tools CLI for the Claude Agent Platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-tools": "./dist/cli.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "cli",
    "tools",
    "development",
    "claude-agent"
  ],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "@claude-agent/types": "workspace:*",
    "@claude-agent/shared": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "fs-extra": "^11.1.1",
    "@types/fs-extra": "^11.0.4"
  },
  "files": [
    "dist",
    "README.md"
  ]
}
