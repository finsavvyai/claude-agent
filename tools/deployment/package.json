{
  "name": "@claude-agent/tools-deployment",
  "version": "1.0.0",
  "description": "Advanced deployment tools for the Claude Agent Platform",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./scripts": "./src/scripts/index.ts",
    "./config": "./src/config/index.ts",
    "./monitoring": "./src/monitoring/index.ts"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy:staging": "node dist/scripts/deploy-staging.js",
    "deploy:production": "node dist/scripts/deploy-production.js",
    "setup:monitoring": "node dist/scripts/setup-monitoring.js"
  },
  "keywords": [
    "deployment",
    "infrastructure",
    "monitoring",
    "claude-agent"
  ],
  "author": "Claude Agent Platform Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.9.0",
    "typescript": "^5.3.2",
    "eslint": "^8.54.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.8"
  },
  "dependencies": {
    "@claude-agent/types": "workspace:*",
    "@claude-agent/shared": "workspace:*",
    "aws-sdk": "^2.1491.0",
    "terraform-js": "^0.5.0",
    "@kubernetes/client-node": "^0.18.1",
    "argocd-sdk": "^1.2.0",
    "prom-client": "^15.1.0"
  }
}
