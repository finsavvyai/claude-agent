# Claude Agent Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=claude_agent
POSTGRES_USER=claude_user
POSTGRES_PASSWORD=claude_password
DATABASE_URL=postgresql://claude_user:claude_password@localhost:5432/claude_agent

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# RabbitMQ Message Queue
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=claude_user
RABBITMQ_PASSWORD=claude_password
RABBITMQ_VHOST=claude_vhost
RABBITMQ_URL=amqp://claude_user:claude_password@localhost:5672/claude_vhost

# =============================================================================
# AI/ML Services Configuration
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Anthropic Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20241022

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Nexa Backend Configuration
NEXA_HOST=localhost
NEXA_PORT=8080
NEXA_API_KEY=your_nexa_api_key_here
NEXA_MODEL_PATH=./models

# =============================================================================
# Vector Database & Search Configuration
# =============================================================================

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=changeme

# =============================================================================
# Storage Configuration
# =============================================================================

# MinIO S3-compatible Storage
MINIO_HOST=localhost
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_ROOT_USER=claude_user
MINIO_ROOT_PASSWORD=claude_password
MINIO_ACCESS_KEY=claude_user
MINIO_SECRET_KEY=claude_password
MINIO_REGION=us-east-1
MINIO_BUCKET=claude-agent-storage
MINIO_URL=http://localhost:9000

# =============================================================================
# Authentication & Security
# =============================================================================

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here_change_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key
SESSION_SECRET=your_session_secret_here

# OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# =============================================================================
# Application Configuration
# =============================================================================

# Node.js Environment
NODE_ENV=development
PORT=3001
HOST=localhost

# API Configuration
API_BASE_URL=http://localhost:3001
API_VERSION=v1
CORS_ORIGIN=http://localhost:3000

# WebSocket Configuration
WS_PORT=3002
WS_URL=ws://localhost:3002

# =============================================================================
# Development Configuration
# =============================================================================

# Development Tools
DEBUG=claude-agent:*
LOG_LEVEL=debug
LOG_FORMAT=dev

# Database Development
DATABASE_LOG_LEVEL=all
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Development
REDIS_DB=0
REDIS_MAX_MEMORY=512mb
REDIS_MAX_MEMORY_POLICY=allkeys-lru

# =============================================================================
# Monitoring & Observability
# =============================================================================

# Prometheus Configuration
PROMETHEUS_HOST=localhost
PROMETHEUS_PORT=9090
PROMETHEUS_URL=http://localhost:9090

# Grafana Configuration
GRAFANA_HOST=localhost
GRAFANA_PORT=3000
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=claude_password

# Jaeger Tracing Configuration
JAEGER_HOST=localhost
JAEGER_PORT=16686
JAEGER_COLLECTOR_PORT=14268
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# =============================================================================
# File Upload & Processing
# =============================================================================

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md,json,yaml,yml

# Image Processing
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=80

# =============================================================================
# Email Configuration
# =============================================================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM=noreply@claude-agent.com

# SendGrid (Alternative)
SENDGRID_API_KEY=your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@claude-agent.com

# =============================================================================
# Rate Limiting & Security
# =============================================================================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true
CORS_CREDENTIALS=true

# =============================================================================
# Performance Configuration
# =============================================================================

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_STRATEGY=lru

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# =============================================================================
# Feature Flags
# =============================================================================

# Feature Toggles
FEATURE_AI_CHAT=true
FEATURE_CODE_GENERATION=true
FEATURE_SEMANTIC_SEARCH=true
FEATURE_COLLABORATION=true
FEATURE_ANALYTICS=true

# Development Features
DEV_HOT_RELOAD=true
DEV_DEBUG_MODE=true
DEV_MOCK_SERVICES=false
DEV_LOG_SQL=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test Database
TEST_DATABASE_URL=postgresql://claude_user:claude_password@localhost:5432/claude_agent_test
TEST_REDIS_URL=redis://:redis_password@localhost:6379/1

# Test Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL=true
TEST_COVERAGE=true

# =============================================================================
# Third-party Integrations
# =============================================================================

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret_here

# GitLab Integration
GITLAB_TOKEN=your_gitlab_token_here
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret_here

# Git Integration
GIT_DEFAULT_BRANCH=main
GIT_AUTHOR_NAME=Claude Agent
GIT_AUTHOR_EMAIL=claude@claude-agent.com

# =============================================================================
# Nexa Backend Specific Configuration
# =============================================================================

# Nexa Model Configuration
NEXA_MODEL_DIR=./models
NEXA_CACHE_DIR=./cache
NEXA_LOG_LEVEL=info
NEXA_MAX_MEMORY=4GB
NEXA_THREADS=4

# Model Download Configuration
NEXA_AUTO_DOWNLOAD=false
NEXA_MODEL_SOURCE=huggingface
NEXA_PROXY_URL=

# =============================================================================
# Luna Agents Configuration
# =============================================================================

# Agent Configuration
LUNA_AGENTS_PORT=3003
LUNA_AGENTS_HOST=localhost
LUNA_PLUGIN_PATH=./.claude-plugin
LUNA_MCP_SERVER_PATH=./mcp-servers
LUNA_WORKSPACE_DIR=./workspace

# Agent Runtime Configuration
LUNA_MAX_CONCURRENT_AGENTS=5
LUNA_AGENT_TIMEOUT=300000
LUNA_AGENT_MEMORY_LIMIT=1GB
LUNA_ENABLE_GPU=false

# =============================================================================
# Logging Configuration
# =============================================================================

# Winston Logging
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=20MB
LOG_FILE_MAX_FILES=14
LOG_DATE_FORMAT=YYYY-MM-DD HH:mm:ss

# Console Logging
LOG_COLORIZE=true
LOG_JSON=false
LOG_PRETTY_PRINT=true

# =============================================================================
# Backup & Maintenance
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# Maintenance Configuration
CLEANUP_ENABLED=true
CLEANUP_SCHEDULE=0 3 * * *
CLEANUP_RETENTION_DAYS=7

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker Development
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_COMPOSE_DEV_FILE=docker-compose.dev.yml
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1

# Container Resources
DOCKER_MEMORY_LIMIT=4GB
DOCKER_CPU_LIMIT=2
DOCKER_SWAP_LIMIT=2GB
