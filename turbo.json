{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:unit": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:integration": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"]
    },
    "test:e2e": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": []
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "clean": {
      "cache": false
    },
    "setup": {
      "cache": false
    },
    "build:packages": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:apps": {
      "dependsOn": ["build:packages"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"]
    },
    "build:tools": {
      "dependsOn": ["build:packages"],
      "outputs": ["dist/**", "build/**"]
    },
    "build:infra": {
      "cache": false
    },
    "migrate": {
      "cache": false
    },
    "migrate:dev": {
      "cache": false
    },
    "seed": {
      "cache": false
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    },
    "docker:up": {
      "cache": false
    },
    "docker:down": {
      "cache": false
    },
    "docker:logs": {
      "cache": false,
      "persistent": true
    },
    "monitoring:up": {
      "cache": false
    },
    "monitoring:down": {
      "cache": false
    },
    "deploy:staging": {
      "cache": false
    },
    "deploy:production": {
      "cache": false
    },
    "release": {
      "cache": false
    },
    "changeset": {
      "cache": false
    },
    "version": {
      "cache": false
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "outputs": ["docs/.vitepress/dist/**"]
    },
    "docs:preview": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "NEXT_PUBLIC_API_URL",
    "API_URL",
    "DATABASE_URL",
    "REDIS_URL",
    "QDRANT_URL",
    "ELASTICSEARCH_URL",
    "MINIO_ENDPOINT",
    "MINIO_ACCESS_KEY",
    "MINIO_SECRET_KEY",
    "JWT_SECRET",
    "NEXTAUTH_SECRET",
    "NEXA_API_URL",
    "OPENAI_API_KEY",
    "ANTHROPIC_API_KEY"
  ]
}
