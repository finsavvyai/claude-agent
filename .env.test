# Test Environment Configuration
# Copy this file to .env.test and configure for your test environment

# Node Environment
NODE_ENV=test

# Server Configuration
PORT=3001
HOST=localhost

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/claude_agent_test
DATABASE_HOST=localhost
DATABASE_PORT=5433
DATABASE_NAME=claude_agent_test
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://:testpassword@localhost:6380
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=testpassword

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9201
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9201

# Qdrant Vector Database
QDRANT_URL=http://localhost:6334
QDRANT_HOST=localhost
QDRANT_PORT=6334
QDRANT_API_KEY=test-api-key

# MinIO S3 Storage
MINIO_ENDPOINT=localhost:9001
MINIO_PORT=9001
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_USE_SSL=false
MINIO_BUCKET=claude-agent-test

# RabbitMQ Message Queue
RABBITMQ_URL=amqp://admin:admin123@localhost:5673/claude-agent-test
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5673
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123
RABBITMQ_VHOST=claude-agent-test

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=test-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=7d

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
CORS_ORIGIN=http://localhost:3001

# AI Services Configuration
OPENAI_API_KEY=sk-test-openai-key-for-testing
ANTHROPIC_API_KEY=sk-ant-test-anthropic-key-for-testing

# Nexa Backend Configuration
NEXA_API_URL=http://localhost:8080
NEXA_API_KEY=test-nexa-api-key

# Monitoring Configuration
JAEGER_ENDPOINT=http://localhost:16687
PROMETHEUS_ENDPOINT=http://localhost:9091

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
ENABLE_SECURITY_SCANNING=false
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true

# Testing Configuration
TEST_TIMEOUT=30000
TEST_PARALLEL_WORKERS=4
MOCK_EXTERNAL_APIS=true
SKIP_INTEGRATION_TESTS=false
